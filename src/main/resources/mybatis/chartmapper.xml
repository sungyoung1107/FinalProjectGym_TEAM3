<!--    센터별 일자별 매출 합계    -->
    <select id="selectDailyTotal" resultType="purchase">
        SELECT gymno,
               purchasedate,
               SUM(purchaseprice) AS total
        FROM purchase
        GROUP BY gymno, purchasedate
        ORDER BY 1
    </select>

<!--    센터별 월별 매출 합계    -->

    <select id="selectMonthlyTotal" resultType="purchase">
        SELECT gymno,
               TO_CHAR(purchasedate, 'MM') As month,
               SUM(purchaseprice) AS total
        FROM purchase
        GROUP BY gymno, TO_CHAR(purchasedate, 'MM')
        ORDER BY 1
    </select>


</mapper>